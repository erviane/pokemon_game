<br>
<%= form_for pokedex ,:html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
      <%= content_tag(:div, "#{ pokedex.errors[:name].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :base_health_point, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :base_health_point, class: "form-control" %>
    <%= content_tag(:div, "#{ pokedex.errors[:base_health_point].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :base_attack, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :base_attack , class: "form-control"%>
    <%= content_tag(:div, "#{ pokedex.errors[:base_attack].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :base_defence, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :base_defence, class: "form-control" %>
    <%= content_tag(:div, "#{ pokedex.errors[:base_defence].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :base_speed, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :base_speed, class: "form-control" %>
    <%= content_tag(:div, "#{ pokedex.errors[:base_speed].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :element_type, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= select_tag('pokedex[element_type]',  options_for_select(Skill::ELEMENT_TYPE.collect {|p| [ p, p ] }), class: "form-control") %>
    <%= content_tag(:div, "#{ pokedex.errors[:element_type].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image_url, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
    <%= f.text_field :image_url, class: "form-control" %>
    <%= content_tag(:div, "#{ pokedex.errors[:image_url].join(', ')}", class: ["field_with_errors_pokemon"]) if pokedex.errors.any?%>
    </div>
  </div>

  <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit'Submit', class: "btn btn-primary"%>
  </div>
  </div>
<% end %>