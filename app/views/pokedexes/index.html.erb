<%= render 'pages/nav' %>
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Pokedexes</div>
            <div class="panel-body">
                <ol class="breadcrumb">
                    <li><%= link_to 'Home', root_path%></li>
                    <li class="active">Pokedexes</li>
                </ol>
                <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>         
                <%= link_to 'New Pokedex', new_pokedex_path, :class=>"btn btn-default" %>
                <br><br>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Base health point</th>
                            <th>Base attack</th>
                            <th>Base defence</th>
                            <th>Base speed</th>
                            <th>Element type</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>                  

                    <tbody>
                        <% @pokedexes.each do |pokedex| %>
                            <tr>
                                <td><%= pokedex.name %></td>
                                <td><%= pokedex.base_health_point %></td>
                                <td><%= pokedex.base_attack %></td>
                                <td><%= pokedex.base_defence %></td>
                                <td><%= pokedex.base_speed %></td>
                                <td><%= pokedex.element_type %></td>
                                <td><%= image_tag pokedex.image_url %></td>
                                <td><%= link_to 'Show', pokedex, :class=>"btn btn-info btn-sm" %>
                                <%= link_to 'Edit', edit_pokedex_path(pokedex), :class=>"btn btn-success btn-sm" %>
                                <%= link_to 'Destroy', pokedex, :class=>"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>      
                <br>
                <%= will_paginate @pokedexes, previous_label: "Previous", next_label: "Next", inner_window: 1, outer_window: 0 %>            
            </div>
        </div>
    </div> <!-- /container -->
<%= render 'pages/footer' %>