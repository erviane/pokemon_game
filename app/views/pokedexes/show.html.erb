<%= render 'pages/nav' %>
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Detail Pokedex</div>
            <div class="panel-body">
                <ol class="breadcrumb">
                    <li><%= link_to 'Home', root_path%></li>
                    <li><%= link_to 'Pokedexes', pokedexes_path%></li>
                    <li class="active">Pokedex Show</li>
                </ol>
                <div class="panel-body-show">
                    <div class="button">
                        <%= link_to 'Edit', edit_pokedex_path(@pokedex), class: "btn btn-success" %>
                        <%= link_to 'Destroy', @pokedex, :class=>"btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-md-3">
                            <center>
                                <div class="photo">
                                    <%= image_tag @pokedex.image_url %>
                                </div>
                            </center>
                        </div>
                        <div class="col-md-9">
                            <table class="table table-bordered" cellpadding="10px">
                                <tr>
                                    <td width="35%" bgcolor="#d9edf7"><strong>Name </strong></td>
                                    <td><%= @pokedex.name %></td>
                                </tr>
                                <tr>
                                    <td bgcolor="#d9edf7"><strong>Base Health Point</strong></td>
                                    <td><%= @pokedex.base_health_point %></td>
                                </tr>
                                <tr>
                                    <td bgcolor="#d9edf7"><strong>Base Attack</strong></td>
                                    <td><%= @pokedex.base_attack %></td>
                                </tr>
                                <tr>
                                    <td bgcolor="#d9edf7"><strong>Base Defense</strong></td>
                                    <td><%= @pokedex.base_defence %></td>
                                </tr>
                                <tr>
                                    <td bgcolor="#d9edf7"><strong>Base Speed</strong></td>
                                    <td><%= @pokedex.base_speed %></td>
                                </tr>
                                <tr>
                                    <td bgcolor="#d9edf7"><strong>Element Type</strong></td>
                                    <td><%= @pokedex.element_type %></td>
                                </tr>
                            </table>
                        </div>
                        <br>
                    </div> 
                </div>
            </div>
        </div>
    </div> <!-- /container -->
<%= render 'pages/footer' %>