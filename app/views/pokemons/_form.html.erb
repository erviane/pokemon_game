<br>
<% if @trainer.present?%>
    <%= form_for [@trainer, @trainer.pokemons.build], :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
            <%= label_tag 'Name', nil, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
                <%= content_tag(:div, "#{ @pokemon.errors[:name].join(', ')}", class: ["field_with_errors_pokemon"]) if @pokemon.errors.any?%>
            </div>
        </div>

        <div class="form-group">
            <%= label_tag 'pokedex_id', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= select_tag('pokemon[pokedex_id]',  options_for_select(@pokedex_select) , prompt: "Select Pokedex",  class: "form-control") %>
                <%= content_tag(:div, "#{ @pokemon.errors[:pokedex_id].join(', ')}", class: ["field_with_errors_pokemon"]) if @pokemon.errors.any?%>
            </div>
        </div>

        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <%= submit_tag 'Submit', class: "btn btn-primary"%>
            </div>
        </div>
    <% end %>
<% else %>
    <%= form_for pokemon, :html => {:class => 'form-horizontal'} do |f| %>
        <div class="form-group">
            <%= label_tag 'Name', nil, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
                <%= content_tag(:div, "#{ @pokemon.errors[:name].join(', ')}", class: ["field_with_errors_pokemon"]) if @pokemon.errors.any?%>
            </div>
        </div>

        <div class="form-group">
            <%= label_tag 'pokedex_id', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-10">
                <%= select_tag('pokemon[pokedex_id]',  options_for_select(@pokedex_select) ,prompt: "Select Pokedex", class: "form-control") %>
                <%= content_tag(:div, "#{ @pokemon.errors[:pokedex_id].join(', ')}", class: ["field_with_errors_pokemon"]) if @pokemon.errors.any?%>
            </div>
        </div>

        <div class="form-group">        
            <div class="col-sm-offset-2 col-sm-10">
                <%= submit_tag 'Submit', class: "btn btn-primary"%>
            </div>
        </div>
    <% end %>
<% end %>
  
