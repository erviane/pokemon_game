                         <li><%= link_to 'Trainer Show', trainer_path(@trainer)%></li>
                     <% else %>
                         <li><%= link_to 'Pokemons', pokemons_path%></li>
                     <% end %>
                     <li><%= link_to 'Pokemon Show', pokemon_path%></li>
                     <li class="active">Pokemon Edit</li>
                </ol>
                <%= render 'form_edit', pokemon: @pokemon %>
            </div>
        </div>
    </div> <!-- /container -->
<%= render 'pages/footer' %>