<%= render 'pages/nav' %>
    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Detail Skill</div>
            <div class="panel-body"><br>
                <ol class="breadcrumb">
                    <li><%= link_to 'Home', root_path%></li>
                    <li><%= link_to 'Skills', skills_path%></li>
                    <li class="active">Skill Show</li>
                </ol>
                <div class="button">
                    <%= link_to 'Edit', edit_skill_path(@skill), class: "btn btn-success" %>
                    <%= link_to 'Destroy', @skill, :class=>"btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
                <br>
                <div class="panel-body-show">
        	           <table class="table table-striped table-bordered">
               			  <tbody>
                			     <tr>
                			         <td width="30%"><strong>Name</strong></td>
                			         <td><%= @skill.name %></td>
                			      </tr>
                			      <tr>
                			         <td><strong>Power</strong></td>
                			         <td><%= @skill.power %></td>
                			      </tr>
                			      <tr>
                			         <td><strong>max PP</strong></td>
                			         <td><%= @skill.max_pp %></td>
                			      </tr>
                			      <tr>
                			         <td><strong>Element Type</strong></td>
                			         <td><%= @skill.element_type %></td>
                			      </tr>
              			    </tbody>
            			  </table>			
                </div>
            </div>
        </div>
    </div> <!-- /container -->
<%= render 'pages/footer' %>