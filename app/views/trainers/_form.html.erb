<br>
<%= form_for trainer ,:html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
        <%= f.label :name, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
            <%= content_tag(:div, "#{ trainer.errors[:name].join(', ')}", class: ["field_with_errors_pokemon"]) if trainer.errors.any?%>
        </div>
    </div>  

    <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control" %>
            <%= content_tag(:div, "#{ trainer.errors[:email].join(', ')}", class: ["field_with_errors_pokemon"]) if trainer.errors.any?%>
        </div>
    </div>  

    <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.password_field :password , class: "form-control"%>
            <%= content_tag(:div, "#{ trainer.errors[:password].join(', ')}", class: ["field_with_errors_pokemon"]) if trainer.errors.any?%>
        </div>
    </div>  

    <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation , class: "form-control"%>
            <%= content_tag(:div, "#{ trainer.errors[:password_confirmation].join(', ')}", class: ["field_with_errors_pokemon"]) if trainer.errors.any?%>
        </div>
    </div>  

    <div class="form-group">        
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit'Submit', class: "btn btn-primary"%>
        </div>
    </div>
<% end %>